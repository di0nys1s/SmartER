<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mapSpinnerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDailyHourly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select an option:"/>

        <Spinner
            android:id="@+id/spinnerDailyHourly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:entries="@array/dh_array">

        </Spinner>

    </LinearLayout>

    <com.mapquest.mapping.maps.MapView android:id="@+id/mapquestMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapquest_app_key="9dlH0Lh3fa4tZ8sWVsMn0wac3vsyfs09" />

</LinearLayout>
